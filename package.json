{
  "name": "timezone-converter",
  "version": "1.0.0",
  "description": "Responsive timezone converter with DST awareness using TimeZoneDB",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "npm run build && node dist/simple-server.js",
    "build": "tsc && npm run build:css && cp dist/frontend.js public/script.js",
    "build:css": "npx tailwindcss -i ./public/style.css -o ./public/output.css",
    "vercel-build": "npm run build",
    "build:css:watch": "npx tailwindcss -i ./public/style.css -o ./public/output.css --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts public/**/*.{js,css,html}",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "timezone",
    "converter",
    "tailwind",
    "express",
    "node"
  ],
  "author": "Sachin",
  "license": "ISC",
  "dependencies": {
    "@vercel/speed-insights": "^1.2.0",
    "dotenv": "^17.2.1",
    "express": "^4.18.2",
    "node-fetch": "^3.3.2",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.1",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.1.3",
    "nodemon": "^3.1.10",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "tailwindcss": "^3.4.17",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
